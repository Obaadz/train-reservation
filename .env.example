# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=train_reservation

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Payment Gateway Configuration (for future use)
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Notification Service Configuration (for future use)
NOTIFICATION_API_KEY=your_notification_service_key
NOTIFICATION_API_SECRET=your_notification_service_secret

# Redis Configuration (for future caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# API Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=http://localhost:5173
BCRYPT_SALT_ROUNDS=10

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_NOTIFICATIONS=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
ENABLE_PERFORMANCE_MONITORING=true

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true

# Session Configuration
SESSION_SECRET=your_session_secret
SESSION_DURATION=24h

# i18n Configuration
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=["ar", "en"]